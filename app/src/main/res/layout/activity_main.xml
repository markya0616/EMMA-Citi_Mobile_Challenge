<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_title_color"
    android:orientation="vertical"
    >
    <ImageView android:id="@+id/titleImage1"
        android:layout_height="260dp"
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/home_emma"
        android:layout_gravity="center"
        />
    <ImageView android:id="@+id/titleImage2"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/home_touch"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center"
        android:onClick="clicked"
        />
    <View android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/home_emma"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home1"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home2"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        />
</LinearLayout>